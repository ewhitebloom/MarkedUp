<div class="off-canvas-wrap" data-offcanvas>
    <div class="inner-wrap">

      <%= render 'shared/header' %>

      <div class='row'>
        <div class="medium-12 small-centered columns text-center">
          <h1>MarkedUp</h1>
          <p>[geo-social]</p>
        </div>
      </div>

      <% if user_signed_in? %>

      <div class='row'>
        <div class="medium-12 small-centered columns text-center">
         <div id='map'>
         </div>
       </div>
      </div>

      <div class='row'>
        <div class="medium-12 small-centered columns text-center">
         <p class='blank_space'></p>
        </div>
      </div>

      <aside class="right-off-canvas-menu">
        <iframe id='listview' src='/posts'>
        </iframe>
      </aside>

      <% else %>

      <div class='medium-12 small-centered columns text-center prompt'>
       <h2>Please Sign Up or Sign In:</h2>
         <ul class='splash'>
          <li><%= link_to 'Sign Up', '/users/sign_up' %></li>
          <li><%= link_to 'Sign In', '/users/sign_in' %></li>
        </ul>
      </div>

      <% end %>

    <div id='mapform'>
      <%= render 'shared/mapform' %>
    </div>

    <% content_for 'extra_footer' do %>
    <script>
      initializeMap();
    </script>
    <% end %>

    <a class="exit-off-canvas"></a>
  </div>
</div>
