<%= simple_form_for @post, :url => new_post_path do |f| %>
  <%= f.input :category, collection: %w{ News Event Personal Parks/Public Works Entertainment Shops Restaurants Neighborhood Government Transportation Other }, required: true, prompt: 'Select a Category' %>
  <%= f.text :body, placeholder: 'Write a post..', required: true %>
  <%= f.hidden_field :user_id, value: "#{current_user.id}", required: true %>
  <%= f.button :submit, 'Submit' %>
<% end %>
