<h1>Write a General Area Post</h1>

<%= render partial: 'new' %>

<h1>Posts in Your Area:</h1>

<%= form_tag posts_path, :method => 'get', :id => "posts_search" do %>
  <p>
    <%= text_field_tag :search, params[:search], placeholder: 'Search posts in your area' %>
    <%= submit_tag "Search", :name => nil %>
  </p>
  <div id="posts"><%= render 'posts' %></div>
<% end %>
